---
import { getLangFromUrl, useTranslations } from '@/i18n/config';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const benefits = [
  {
    icon: `<svg viewBox="0 0 24 24" fill="none">
      <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`,
    title: t('benefits.online'),
    description: lang === 'es' ? 'Disponible las 24 horas desde cualquier dispositivo' : 'Available 24/7 from any device',
    color: 'blue'
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none">
      <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9M13.73 21a2 2 0 0 1-3.46 0" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`,
    title: t('benefits.reminders'),
    description: lang === 'es' ? 'Recordatorios automáticos para reducir ausencias' : 'Automatic reminders to reduce no-shows',
    color: 'green'
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none">
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zM10 17l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" fill="currentColor"/>
    </svg>`,
    title: t('benefits.customization'),
    description: lang === 'es' ? 'Página de agendamiento personalizada y profesional' : 'Personalized and professional booking page',
    color: 'purple'
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none">
      <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`,
    title: t('benefits.management'),
    description: lang === 'es' ? 'Gestiona servicios y horarios de forma simple' : 'Manage services and schedules simply',
    color: 'orange'
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none">
      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`,
    title: t('benefits.integration'),
    description: lang === 'es' ? 'Integración perfecta con Google Calendar y WhatsApp' : 'Seamless Google Calendar and WhatsApp integration',
    color: 'blue'
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none">
      <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>`,
    title: t('benefits.payments'),
    description: lang === 'es' ? 'Recibe pagos online de forma segura' : 'Receive secure online payments',
    color: 'green'
  }
];
---

<section class="benefits-section">
  <div class="container">
    <!-- Header -->
    <div class="section-header">
      <h2 class="section-title">{t('benefits.title')}</h2>
      <p class="section-subtitle">
        {lang === 'es' 
                  ? 'Con OntheDot, tu software de agendamiento se convierte en tu mejor asistente.'
        : 'With OntheDot, your scheduling software becomes your best assistant.'
        }
      </p>
    </div>

    <!-- Benefits Grid -->
    <div class="benefits-grid">
      {benefits.map((benefit, index) => (
        <div class={`benefit-card benefit-${benefit.color}`} style={`animation-delay: ${index * 0.1}s`}>
          <div class="card-content">
            <div class="icon-wrapper">
              <div class="icon-background"></div>
              <div class="icon" set:html={benefit.icon}></div>
            </div>
            <div class="text-content">
              <h3 class="benefit-title">{benefit.title}</h3>
              <p class="benefit-description">{benefit.description}</p>
            </div>
          </div>
          <div class="card-glow"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .benefits-section {
    padding: 8rem 0;
    background: linear-gradient(180deg, #ffffff 0%, #f8fafc 50%, #ffffff 100%);
    position: relative;
    overflow: hidden;
  }

  .benefits-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 120%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-gray-200), transparent);
  }

  /* Section Header */
  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 5rem;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-dark);
    margin-bottom: 1.5rem;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: var(--color-gray-600);
    line-height: 1.6;
    font-weight: 400;
  }

  /* Benefits Grid */
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 2rem;
    margin: 0 auto;
    max-width: 1400px;
  }

  /* Benefit Cards */
  .benefit-card {
    background: white;
    border-radius: 24px;
    padding: 2.5rem;
    position: relative;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(226, 232, 240, 0.8);
    overflow: hidden;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .benefit-card:hover {
    transform: translateY(-8px);
    border-color: transparent;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  }

  .card-content {
    position: relative;
    z-index: 2;
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  /* Icon Styling */
  .icon-wrapper {
    position: relative;
    flex-shrink: 0;
  }

  .icon-background {
    width: 64px;
    height: 64px;
    border-radius: 16px;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0.1;
    transition: all 0.3s ease;
  }

  .icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    position: relative;
    z-index: 1;
    transition: all 0.3s ease;
  }

  .icon svg {
    width: 28px;
    height: 28px;
    transition: all 0.3s ease;
  }

  /* Text Content */
  .text-content {
    flex: 1;
    min-width: 0;
  }

  .benefit-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-dark);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .benefit-description {
    font-size: 0.95rem;
    color: var(--color-gray-600);
    line-height: 1.6;
    margin: 0;
  }

  /* Card Glow Effect */
  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 24px;
    pointer-events: none;
  }

  .benefit-card:hover .card-glow {
    opacity: 1;
  }

  /* Color Variants */
  .benefit-blue .icon {
    color: var(--color-primary);
  }

  .benefit-blue .icon-background {
    background: var(--color-primary);
  }

  .benefit-blue:hover .card-glow {
    box-shadow: 0 0 60px rgba(37, 99, 235, 0.15);
  }

  .benefit-green .icon {
    color: var(--color-green-primary);
  }

  .benefit-green .icon-background {
    background: var(--color-green-primary);
  }

  .benefit-green:hover .card-glow {
    box-shadow: 0 0 60px rgba(22, 163, 74, 0.15);
  }

  .benefit-purple .icon {
    color: var(--color-purple-primary);
  }

  .benefit-purple .icon-background {
    background: var(--color-purple-primary);
  }

  .benefit-purple:hover .card-glow {
    box-shadow: 0 0 60px rgba(147, 51, 234, 0.15);
  }

  .benefit-orange .icon {
    color: #ea580c;
  }

  .benefit-orange .icon-background {
    background: #ea580c;
  }

  .benefit-orange:hover .card-glow {
    box-shadow: 0 0 60px rgba(234, 88, 12, 0.15);
  }

  /* Hover Effects */
  .benefit-card:hover .icon {
    transform: scale(1.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .benefit-card:hover .icon-background {
    opacity: 0.2;
    transform: scale(1.1);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .benefits-section {
      padding: 5rem 0;
    }

    .section-title {
      font-size: 2.25rem;
    }

    .section-subtitle {
      font-size: 1.1rem;
    }

    .section-header {
      margin-bottom: 3rem;
    }

    .benefits-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .benefit-card {
      padding: 2rem;
    }

    .card-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .icon-wrapper {
      align-self: center;
    }
  }

  @media (max-width: 480px) {
    .benefit-card {
      padding: 1.5rem;
      border-radius: 20px;
    }

    .icon {
      width: 56px;
      height: 56px;
    }

    .icon-background {
      width: 56px;
      height: 56px;
    }

    .icon svg {
      width: 24px;
      height: 24px;
    }

    .benefit-title {
      font-size: 1.125rem;
    }

    .benefit-description {
      font-size: 0.9rem;
    }
  }
</style> 