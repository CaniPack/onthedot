---
import { getLangFromUrl, useTranslations } from '@/i18n/config';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

function getLocalizedPath(path: string) {
  if (lang === 'es') {
    return `/es${path}`;
  }
  return path;
}

const currentYear = new Date().getFullYear();

// Footer navigation structure
const footerData = {
  product: {
    title: lang === 'es' ? 'Producto' : 'Product',
    links: [
      { name: lang === 'es' ? 'Funcionalidades' : 'Features', href: '#features' },
      { name: lang === 'es' ? 'Precios' : 'Pricing', href: '#pricing' },
      { name: lang === 'es' ? 'Integraciones' : 'Integrations', href: '#integrations' },
      { name: lang === 'es' ? 'Testimonios' : 'Testimonials', href: '#testimonials' }
    ]
  },
  specialties: {
    title: lang === 'es' ? 'Especialidades' : 'Specialties',
    links: [
      { name: lang === 'es' ? 'Psicólogos' : 'Psychologists', href: getLocalizedPath('/psicologos') },
      { name: lang === 'es' ? 'Nutricionistas' : 'Nutritionists', href: getLocalizedPath('/nutricionistas') },
      { name: lang === 'es' ? 'Médicos' : 'Doctors', href: getLocalizedPath('/medicos') },
      { name: lang === 'es' ? 'Fisioterapeutas' : 'Physical Therapists', href: getLocalizedPath('/fisioterapeutas') }
    ]
  },
  company: {
    title: lang === 'es' ? 'Empresa' : 'Company',
    links: [
      { name: lang === 'es' ? 'Acerca de' : 'About', href: getLocalizedPath('/about') },
      { name: lang === 'es' ? 'Contacto' : 'Contact', href: getLocalizedPath('/contact') },
      { name: lang === 'es' ? 'Centro de Ayuda' : 'Help Center', href: getLocalizedPath('/help') },
      { name: 'Blog', href: getLocalizedPath('/blog') }
    ]
  },
  legal: {
    title: 'Legal',
    links: [
      { name: lang === 'es' ? 'Privacidad' : 'Privacy', href: getLocalizedPath('/privacy-policy') },
      { name: lang === 'es' ? 'Términos' : 'Terms', href: getLocalizedPath('/terms') },
      { name: lang === 'es' ? 'Seguridad' : 'Security', href: getLocalizedPath('/security') },
      { name: 'GDPR', href: getLocalizedPath('/gdpr') }
    ]
  }
};
---

