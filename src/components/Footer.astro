  <div class="container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <!-- Brand Section -->
      <div class="footer-brand">
        <div class="brand-logo">
          <div class="logo-icon">
            <svg viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="10" fill="#16a34a"/>
