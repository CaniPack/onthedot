import { getLangFromUrl, useTranslations } from '@/i18n/config';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

function getLocalizedPath(path: string) {
  if (lang === 'es') {
    return `/es${path}`;
  }
  return path;
}

// 3 Ventajas clave reales
