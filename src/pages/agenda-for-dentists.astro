---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Benefits from '../components/Benefits.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Integrations from '../components/Integrations.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
import FinalCTA from '../components/FinalCTA.astro';
import Footer from '../components/Footer.astro';

const metaDescription = "Transform your dental practice with OntheDot's scheduling app. Reduce no-shows, automate appointment reminders, and manage your dental clinic efficiently. Perfect for dentists, orthodontists, and dental specialists.";
const keywords = "dental scheduling software, dental practice management, dental appointment system, dental clinic software, dentist appointment booking, dental practice automation";
---

<BaseLayout 
  title="Dental Practice Management & Scheduling Software | OntheDot" 
  description={metaDescription}
  keywords={keywords}
>
  <Header />
  <main>
    <!-- 1. Hero Above-the-Fold -->
    <section class="hero" id="main-content">
      <div class="container">
        <div class="hero-content">
          <h1>OntheDot: Smart Scheduling Software for Modern Dental Practices</h1>
          <p class="hero-subtitle">Streamline your dental practice with automated scheduling, patient reminders, and treatment follow-ups. Focus on providing excellent dental care while we handle the administrative work.</p>
          <div class="hero-cta">
            <a href="#contact" class="btn btn-primary">Schedule your free demo</a>
            <button type="button" class="btn btn-secondary" onclick="openWaitlistModal()">
              View plans & pricing
            </button>
          </div>
        </div>
        <div class="hero-image">
          <div class="mockup-phone">
            <div class="calendar-preview">
              <div class="slot booked">09:00 - Dental cleaning</div>
              <div class="slot available">10:00 - Available</div>
              <div class="slot booked">11:00 - Root canal</div>
              <div class="slot available">12:00 - Available</div>
              <div class="slot booked">14:00 - Orthodontic check</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 2. Pain Block -->
    <section class="pain-block">
      <div class="container">
        <h2>Common Challenges in Dental Practice Management</h2>
        <div class="pain-cards">
          <div class="pain-card">
            <div class="pain-icon">ðŸ˜°</div>
            <h3>Last-minute Cancellations Impact Revenue</h3>
            <p>Empty chair time costs your practice thousands in lost revenue when patients cancel last minute or don't show up for their dental appointments.</p>
          </div>
          <div class="pain-card">
            <div class="pain-icon">ðŸ“ž</div>
            <h3>Staff Overwhelmed with Phone Calls</h3>
            <p>Your dental assistants spend hours on the phone confirming appointments and rescheduling patients instead of focusing on chairside assistance and patient care.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- 3. Industry-Specific Benefits -->
    <section class="benefits-dental">
      <div class="container">
        <h2>Tailored for Dental Practices</h2>
        <div class="benefits-grid">
          <div class="benefit-card">
            <div class="benefit-icon">ðŸ¦·</div>
            <h3>Treatment-Specific Scheduling</h3>
            <p>Set different durations for cleanings, fillings, root canals, and other dental procedures</p>
          </div>
          <div class="benefit-card">
            <div class="benefit-icon">ðŸ’‰</div>
            <h3>Chair & Equipment Management</h3>
            <p>Optimize your operatory usage and dental equipment scheduling</p>
          </div>
          <div class="benefit-card">
            <div class="benefit-icon">ðŸ“±</div>
            <h3>Patient Communication</h3>
            <p>Automated appointment reminders with pre-visit instructions (e.g., x-ray preparations)</p>
          </div>
          <div class="benefit-card">
            <div class="benefit-icon">ðŸ“…</div>
            <h3>Treatment Plan Follow-ups</h3>
            <p>Automatic recalls for cleanings, check-ups, and treatment completions</p>
          </div>
        </div>
      </div>
    </section>

    <Benefits />
    <HowItWorks />
    <Integrations />

    <!-- 4. Dental-Specific Testimonials -->
    <section class="testimonials-dental">
      <div class="container">
        <h2>Trusted by Leading Dental Practices</h2>
        <div class="testimonials-grid">
          <div class="testimonial-card">
            <p>"OntheDot reduced our no-show rate by 60% and helped us optimize our chair time. The automated recalls for hygiene appointments have significantly improved our patient retention."</p>
            <div class="author">
              <img src="/testimonials/dentist-1.jpg" alt="Dr. Sarah Mitchell" />
              <div>
                <strong>Dr. Sarah Mitchell</strong>
                <span>General Dentist, Bright Smile Dental</span>
              </div>
            </div>
          </div>
          <div class="testimonial-card">
            <p>"The treatment-specific scheduling has been a game-changer for our orthodontic practice. We can now properly allocate time for different procedures and our staff spends less time on the phone."</p>
            <div class="author">
              <img src="/testimonials/dentist-2.jpg" alt="Dr. James Chen" />
              <div>
                <strong>Dr. James Chen</strong>
                <span>Orthodontist, Advanced Orthodontics</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <FAQ />
    <FinalCTA />
  </main>
  <Footer />
</BaseLayout>

<style>
  /* Hero especÃ­fico para dentistas */
  .hero {
    background: linear-gradient(135deg, #e0f2fe 0%, #ffffff 100%);
    padding: 4rem 0 6rem;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-dark);
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-gray-600);
    margin-bottom: 2.5rem;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Pain Block */
  .pain-block {
    background: var(--color-dark);
    color: white;
    padding: 4rem 0;
  }

  .pain-block h2 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--color-gray-100);
  }

  .pain-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .pain-card {
    background: var(--color-gray-800);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
  }

  .pain-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .pain-card h3 {
    color: #0ea5e9;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .pain-card p {
    color: var(--color-gray-300);
    line-height: 1.6;
  }

  /* Benefits Section */
  .benefits-dental {
    padding: 4rem 0;
    background: #f8fafc;
  }

  .benefits-dental h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--color-dark);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .benefit-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }

  .benefit-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .benefit-card h3 {
    color: #0ea5e9;
    margin-bottom: 1rem;
    font-size: 1.25rem;
  }

  .benefit-card p {
    color: var(--color-gray-600);
    line-height: 1.6;
  }

  /* Testimonials Section */
  .testimonials-dental {
    padding: 4rem 0;
    background: white;
  }

  .testimonials-dental h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--color-dark);
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonial-card {
    background: #f8fafc;
    padding: 2rem;
    border-radius: 12px;
    border-left: 4px solid #0ea5e9;
  }

  .testimonial-card p {
    font-style: italic;
    color: var(--color-gray-700);
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author strong {
    display: block;
    color: var(--color-dark);
    font-size: 1.1rem;
  }

  .author span {
    color: var(--color-gray-600);
    font-size: 0.9rem;
  }

  /* Mockup Phone */
  .mockup-phone {
    width: 300px;
    height: 500px;
    background: white;
    border-radius: 25px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    padding: 30px 20px;
    border: 8px solid #0ea5e9;
    margin: 2rem auto 0;
  }

  .calendar-preview {
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .slot {
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
    font-weight: 600;
  }

  .slot.booked {
    background: #0ea5e9;
    color: white;
  }

  .slot.available {
    background: var(--color-gray-100);
    color: var(--color-gray-600);
    border: 2px dashed var(--color-gray-300);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }
    
    .hero-cta {
      flex-direction: column;
      align-items: center;
    }
    
    .hero-cta .btn {
      width: 100%;
      max-width: 300px;
    }

    .pain-cards {
      grid-template-columns: 1fr;
    }

    .mockup-phone {
      width: 250px;
      height: 400px;
    }

    .benefits-grid {
      grid-template-columns: 1fr;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 