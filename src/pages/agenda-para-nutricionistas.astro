    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .mini-testimonial img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
  }

  .testimonial-content p {
    font-style: italic;
    color: var(--color-gray-700);
    margin-bottom: 0.5rem;
  }

  .testimonial-content .author {
    color: #16a34a;
    font-weight: 600;
  }

  .journey-progress {
    margin-top: 4rem;
    text-align: center;
  }

  .journey-progress h3 {
    color: var(--color-gray-700);
