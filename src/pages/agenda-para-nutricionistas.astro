    width: 350px;
    background: white;
    border-radius: 25px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    padding: 2rem;
    margin: 0 auto;
  }

  .calendar-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .calendar-header h4 {
    color: #16a34a;
    margin: 0;
    margin-bottom: 0.5rem;
  }

  .buffer-indicator {
    font-size: 0.9rem;
    color: var(--color-gray-600);
  }

  .services-list {
    background: #f0fdf4;
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }

  .service {
    padding: 0.5rem;
    color: var(--color-gray-700);
    font-weight: 500;
  }

  .appointments {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .slot {
    padding: 1rem;
    border-radius: 8px;
    background: #f8fafc;
  }

  .slot.booked {
    background: #16a34a;
    color: white;
  }

  .slot.buffer {
    background: #f0fdf4;
    color: #16a34a;
    text-align: center;
    font-size: 0.9rem;
    padding: 0.25rem;
  }

  .slot .time {
    font-weight: 600;
    margin-right: 0.5rem;
  }

  .slot .details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    font-size: 0.8rem;
  }

  .tag {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    background: rgba(255,255,255,0.2);
  }

  .calendar-footer {
    text-align: center;
    margin-top: 1.5rem;
