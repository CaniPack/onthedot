    margin-bottom: 3rem;
    color: var(--color-gray-100);
  }

  .pain-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .pain-card {
    background: var(--color-gray-800);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
  }

  .pain-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .pain-card h3 {
    color: #16a34a;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .pain-card p {
    color: var(--color-gray-300);
    line-height: 1.6;
  }

  /* Benefits Section */
  .benefits-nutrition {
    padding: 4rem 0;
    background: #f8fafc;
  }

  .benefits-nutrition h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
