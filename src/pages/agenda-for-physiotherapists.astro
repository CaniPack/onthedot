---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Benefits from '../components/Benefits.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Integrations from '../components/Integrations.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
import FinalCTA from '../components/FinalCTA.astro';
import Footer from '../components/Footer.astro';

const metaDescription = "Optimize your physiotherapy clinic with OntheDot. Scheduling software designed for physiotherapists, with treatment tracking, automated reminders, and patient management. Perfect for physical rehabilitation and therapy.";
const keywords = "physiotherapy scheduling software, physical therapy appointments, physiotherapy clinic management, physical rehabilitation software, therapy scheduling system, physiotherapist booking";
---

<BaseLayout 
  title="Scheduling and Management Software for Physiotherapists | OntheDot" 
  description={metaDescription}
  keywords={keywords}
>
  <Header />
  <main>
    <!-- 1. Hero Above-the-Fold -->
    <section class="hero" id="main-content">
      <div class="container">
        <div class="hero-content">
          <h1>OntheDot: Smart Software for Physiotherapy Clinics</h1>
          <p class="hero-subtitle">Optimize your physiotherapy clinic with automated scheduling, treatment tracking, and patient reminders. Focus on rehabilitation while we handle the scheduling.</p>
          <div class="hero-cta">
            <a href="#contact" class="btn btn-primary">Schedule your free demo</a>
            <button type="button" class="btn btn-secondary" onclick="openWaitlistModal()">
              View plans and pricing
            </button>
          </div>
        </div>
        <div class="hero-image">
          <div class="mockup-phone">
            <div class="calendar-preview">
              <div class="slot booked">09:00 - Lower back rehab</div>
              <div class="slot available">10:00 - Available</div>
              <div class="slot booked">11:00 - Manual therapy</div>
              <div class="slot available">12:00 - Available</div>
              <div class="slot booked">14:00 - Post-surgery follow-up</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 2. Pain Block -->
    <section class="pain-block">
      <div class="container">
        <h2>Common Challenges in Physiotherapy Clinic Management</h2>
        <div class="pain-cards">
          <div class="pain-card">
            <div class="pain-icon">üò∞</div>
            <h3>No-Shows Impact Treatment Continuity</h3>
            <p>Missed sessions disrupt rehabilitation progress and result in financial losses when patients don't show up for their scheduled therapy.</p>
          </div>
          <div class="pain-card">
            <div class="pain-icon">üìû</div>
            <h3>Staff Overwhelmed with Administrative Tasks</h3>
            <p>Your team spends hours confirming appointments and rescheduling patients instead of focusing on providing better therapeutic care.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- 3. Industry-Specific Benefits -->
    <section class="benefits-physio">
      <div class="container">
        <h2>Designed for Physiotherapy Clinics</h2>
        <div class="benefits-grid">
          <div class="benefit-card">
            <div class="benefit-icon">üèÉ</div>
            <h3>Treatment Tracking</h3>
            <p>Monitor rehabilitation progress and automatically schedule follow-up sessions</p>
          </div>
          <div class="benefit-card">
            <div class="benefit-icon">‚ö°</div>
            <h3>Equipment and Room Management</h3>
            <p>Optimize the use of therapy equipment and rehabilitation spaces</p>
          </div>
          <div class="benefit-card">
            <div class="benefit-icon">üì±</div>
            <h3>Patient Communication</h3>
            <p>Automated appointment reminders with preparation instructions for therapy</p>
          </div>
          <div class="benefit-card">
            <div class="benefit-icon">üìÖ</div>
            <h3>Treatment Plans</h3>
            <p>Schedule complete series of sessions and maintain progress records</p>
          </div>
        </div>
      </div>
    </section>

    <Benefits />
    <HowItWorks />
    <Integrations />

    <!-- 4. Physio-Specific Testimonials -->
    <section class="testimonials-physio">
      <div class="container">
        <h2>Backed by Leading Physiotherapy Clinics</h2>
        <div class="testimonials-grid">
          <div class="testimonial-card">
            <p>"OntheDot has revolutionized our clinic management. Patients better comply with their treatment series thanks to automated reminders, and progress tracking is much more efficient."</p>
            <div class="author">
              <img src="/testimonials/physio-1.jpg" alt="John Martinez, PT" />
              <div>
                <strong>John Martinez, PT</strong>
                <span>Director, Physical Rehabilitation Center</span>
              </div>
            </div>
          </div>
          <div class="testimonial-card">
            <p>"The scheduling of session series and treatment tracking have significantly improved our patient adherence. Plus, staff now has more time for therapeutic care."</p>
            <div class="author">
              <img src="/testimonials/physio-2.jpg" alt="Sarah Wilson, PT" />
              <div>
                <strong>Sarah Wilson, PT</strong>
                <span>Sports Rehabilitation Specialist</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <FAQ />
    <FinalCTA />
  </main>
  <Footer />
</BaseLayout>

<style>
  /* Hero specific for physiotherapy */
  .hero {
    background: linear-gradient(135deg, #dcfce7 0%, #ffffff 100%);
    padding: 4rem 0 6rem;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero h1 {
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-dark);
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-gray-600);
    margin-bottom: 2.5rem;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Pain Block */
  .pain-block {
    background: var(--color-dark);
    color: white;
    padding: 4rem 0;
  }

  .pain-block h2 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--color-gray-100);
  }

  .pain-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .pain-card {
    background: var(--color-gray-800);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
  }

  .pain-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .pain-card h3 {
    color: #22c55e;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .pain-card p {
    color: var(--color-gray-300);
    line-height: 1.6;
  }

  /* Benefits Section */
  .benefits-physio {
    padding: 4rem 0;
    background: #f8fafc;
  }

  .benefits-physio h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--color-dark);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .benefit-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
  }

  .benefit-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .benefit-card h3 {
    color: #22c55e;
    margin-bottom: 1rem;
    font-size: 1.25rem;
  }

  .benefit-card p {
    color: var(--color-gray-600);
    line-height: 1.6;
  }

  /* Testimonials Section */
  .testimonials-physio {
    padding: 4rem 0;
    background: white;
  }

  .testimonials-physio h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--color-dark);
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonial-card {
    background: #f8fafc;
    padding: 2rem;
    border-radius: 12px;
    border-left: 4px solid #22c55e;
  }

  .testimonial-card p {
    font-style: italic;
    color: var(--color-gray-700);
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .author img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author strong {
    display: block;
    color: var(--color-dark);
    font-size: 1.1rem;
  }

  .author span {
    color: var(--color-gray-600);
    font-size: 0.9rem;
  }

  /* Mockup Phone */
  .mockup-phone {
    width: 300px;
    height: 500px;
    background: white;
    border-radius: 25px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    padding: 30px 20px;
    border: 8px solid #22c55e;
    margin: 2rem auto 0;
  }

  .calendar-preview {
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .slot {
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
    font-weight: 600;
  }

  .slot.booked {
    background: #22c55e;
    color: white;
  }

  .slot.available {
    background: var(--color-gray-100);
    color: var(--color-gray-600);
    border: 2px dashed var(--color-gray-300);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }
    
    .hero-cta {
      flex-direction: column;
      align-items: center;
    }
    
    .hero-cta .btn {
      width: 100%;
      max-width: 300px;
    }

    .pain-cards {
      grid-template-columns: 1fr;
    }

    .mockup-phone {
      width: 250px;
      height: 400px;
    }

    .benefits-grid {
      grid-template-columns: 1fr;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 